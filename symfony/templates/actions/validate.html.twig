{% extends 'base.html.twig' %}

{% block authentication %}
    <div class="position-absolute-centre">
        <form class="p-5 bg-white rounded shadow-sm" action="{{ path('app_admin_verify_password') }}" method="post">
            <input type="hidden" name="id" value="{{ id }}"/>
            <input type="hidden" name="token" value="{{ token }}"/>

            <label for="password">Password:</label>
            <input class="form-control mb-3" type="password" id="password" name="password"/>
            <label for="confirmPassword">Confirm Password:</label>
            <input class="form-control mb-3" type="password" id="confirmPassword" name="confirmPassword"/>

            <div class="container">
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-primary">
                        <span class="d-none spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        <span>Confirm</span>
                    </button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('login') }}
{% endblock %}