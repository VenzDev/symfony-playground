<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <div class="container-fluid">
        <div class="row vh-100">
            <div class="col-12 col-sm-3 col-xl-2 px-sm-2 px-0 bg-dark sticky-top">
                {% include 'sidebar.html.twig' %}
            </div>
            <div class="col-12 col-sm-9 col-xl-10 d-flex flex-column h-sm-100">
                <div class="position-relative">
                    <div id="successToast"
                         class="toast text-white bg-success position-fixed top-0 start-50 translate-middle-x m-2"
                         style="z-index: 10000"
                         role="alert"
                         aria-live="assertive"
                         aria-atomic="true">
                        <div class="d-flex">
                            <div class="toast-body successMessageBody"></div>
                            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"
                                    aria-label="Close"></button>
                        </div>
                    </div>
                    <div id="errorToast"
                         class="toast text-white bg-danger position-fixed top-0 start-50 translate-middle-x m-2"
                         role="alert"
                         style="z-index: 10000"
                         aria-live="assertive"
                         aria-atomic="true">
                        <div class="d-flex">
                            <div class="toast-body errorMessageBody"></div>
                            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"
                                    aria-label="Close"></button>
                        </div>
                    </div>
                </div>
                {% block body %}{% endblock %}
            </div>
        </div>
    </div>
{% else %}
    {% block login %}{% endblock %}
{% endif %}

</body>
</html>
